<%- include('../partials/header') %>
<body>
    
    <%- include('../partials/navUser') %>
    
    <div class="container">

        <h1 class="display-4 mt-5">Cadastrar Despesa</h1>
        <form action="/save" method="POST" class="d-flex flex-column mt-5">
            <div class="d-flex  justify-content-between">
                <div class="input-group">
                    <input name="time"  class="form-control" placeholder="Data" type="date" max="2030" min="2000">
                </div>
                <select name="type" class="form-control ml-2" name="" placeholder="Tipo"  id="">
                    <option class="" value="Saúde">Saúde</option>
                    <option class="" value="Educação">Educação</option>
                    <option class="" value="Tecnologia">Tecnologia</option>
                    <option class="" value="Comida">Comida</option>
                    <option class="" value="Outros">Outros</option>
                </select>
            </div>
            
           <div class="d-flex justify-content-between">
            <input name="descrition" class="form-control col-8 mt-2"  placeholder="Descrição" type="text">
            <input name="value" class="form-control col-3 mt-2 ml-2" id="valor"  placeholder="Valor" type="text">   
           </div>
           <button class="btn btn-primary mt-3" type="submit">Adicionar</button>
        </form>
    </div>

   

</body>
