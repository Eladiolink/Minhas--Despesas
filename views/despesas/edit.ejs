<%- include('../partials/header') %>
<body>
    
    <%- include('../partials/navUser') %>
    
    <div class="container">

        <h1 class="display-4 mt-5">Editar Despesa</h1>
        <form action="/update" method="POST" class="d-flex flex-column mt-5">
            <div class="d-flex  justify-content-between">
                <div class="input-group">
                    <input name="time" value="<%= despesa.data %>"  class="form-control" placeholder="Data" type="date" max="2030" min="2000">
                </div>

                <input id="type" name="id" type="hidden" value="<%= despesa.id %>">
                <input id="type" type="hidden" value="<%= despesa.type %>">
                <select name="type" class="form-control ml-2" name="" placeholder="Tipo"  id="">
                    <option  value="Saúde">Saúde</option>
                    <option  value="Educação">Educação</option>
                    <option  value="Tecnologia">Tecnologia</option>
                    <option  value="Comida">Comida</option>
                    <option  value="Outros">Outros</option>
                </select>
            </div>
            
           <div class="d-flex justify-content-between">
            <input name="descrition" value="<%= despesa.descrition %>" class="form-control col-8 mt-2"  placeholder="Descrição" type="text">
            <input name="value"      value="<%= despesa.value %>" class="form-control col-3 mt-2 ml-2"  placeholder="Valor" type="text">   
           </div>
           <button class="btn btn-primary mt-3" type="submit">Adicionar</button>
        </form>
    </div>



</body>
<script>
    let options=document.querySelectorAll("option")
    let value=document.getElementById('type').value
    console.log(value)
    for(let i=0;i<options.length;i++){
       if(options[i].innerHTML==value){
           options[i].setAttribute('selected','selected');
       }
    }
</script>
